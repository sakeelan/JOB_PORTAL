<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
<link rel="stylesheet" href="/styles/admin.css">
</head>
<%- include('./partials/adminhead.ejs') %>
<center><h2 class="home" style="background-color: rgba(255, 166, 0, 0.623);">SEEKERS PROFILE</h2></center>
<%- include('./partials/adminnav.ejs') %>
<body>
    <div class="apply">

<table border="2px">
    <thead>
<tr>
    <th>SNO</th>
    <th>ROLE</th>
    <th>LOCATION</th>
    <th>FULL NAME</th>
    <th>EMAIL ID</th>
    <th>CONTACT</th>
    <th>EXPERIENCE</th>
    <th>SALARY EXPECTATION</th>
    <th>RESUMES</th>
    <th>ACTION</th>
</tr>

    </thead>


    <% user.forEach((user,index)=>{ %>
        
        <td><%= index+1 %></td>
        <td class="trole"><%= user.role %></td>
        <td class="tlocation"><%= user.location %></td>
        <td class="tname"><%= user.name %></td>
        <td class="temail"><%= user.email %></td>
        <td class="tcontact"><%= user.contact %></td>
        <td class="texp"><%= user.exp %></td>
        <td class="tsalary"><%= user.salary %></td>
        <td class="tresume" ><%= user.resume %></td>
      
        <td>
            <button style="background: none; border: none;" ><a href="/viewprofile/<%= user._id %>" ><i class="bi bi-eye" id="trash" style="color: black;"></i></a></i></button>
            
            <a href="/admindelete/<%= user._id  %>" onclick="deletedata()"><i class="bi bi-trash3" id="trash"   ></i></i></a>
            
        </td>
    </tr>
    <% }) %>


</table>


    </div>

   <center>

        <form action="" class="f">
            <div class="h">
                <h1 class="hrole"><span></span>role</h1>

            <button class="cancel" onclick="cancel(event)" >X</button>
            </div>
           

         
           <div class="bo"><span><i class="bi bi-geo-alt-fill"></i></span><h4 class="hlocation">locaton</h4></div>
           <div class="bo"><span><i class="bi bi-person-rolodex"></i></span> <h4 class="hname">name</h4></div>
           <div class="bo"><span><i class="bi bi-envelope-paper"></i></span> <h4 class="hemail">email</h4></div>
           <div class="bo"><span><i class="bi bi-telephone-forward-fill"></i></span> <h4 class="hcontact">contact</h4></div>
           <div class="bo"><span><i class="bi bi-alarm"></i></span> <h4 class="hexp">exp</h4></div>
           <div class="bo"><span><i class="bi bi-cash-coin"></i></span><h4 class="hsalary">salary</h4></div>
           <div class="bo"><span><i class="bi bi-file-earmark-person-fill"></i></span> <h4 class="hresume">resume</h4></div>


        </form>
    </center>

</body>
</html>
<script src="/js/admin.js"></script>
